# TestGenius Environment Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - keep it in .gitignore

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3001

# ===========================================
# AI SERVICES
# ===========================================
# Google Generative AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# OpenAI (if using)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# DATABASE SETTINGS
# ===========================================
# Local Development (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/testgenius_dev

# Production (will be set by deployment script)
# DATABASE_URL=postgresql://username:password@host:5432/testgenius_prod

# ===========================================
# REDIS/CACHE SETTINGS
# ===========================================
# Local Development
REDIS_URL=redis://localhost:6379

# Production (will be set by deployment script)
# REDIS_URL=redis://production-host:6379

# ===========================================
# AWS SETTINGS (for production)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_S3_BUCKET=testgenius-uploads

# ===========================================
# AZURE SETTINGS (for production)
# ===========================================
AZURE_STORAGE_ACCOUNT=your_azure_storage_account
AZURE_STORAGE_KEY=your_azure_storage_key
AZURE_CONTAINER_NAME=testgenius-uploads

# ===========================================
# SECURITY SETTINGS
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Email service (for notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Firebase (if using for frontend)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Application monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
SENTRY_DSN=your_sentry_dsn

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Debug settings
DEBUG=testgenius:*
LOG_LEVEL=debug

# Browser automation
PLAYWRIGHT_BROWSERS_PATH=/usr/bin
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=true

# ===========================================
# CORS & SECURITY
# ===========================================
CORS_ORIGIN=http://localhost:5173,https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
